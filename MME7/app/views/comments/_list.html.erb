  <%= flash[:notice] %>
<div >

  <h2>comments</h2>
  <table >
    <tr>
      <th></th>
      <th>Comments List</th>
      
    </tr>
      <% if @comments %>
    <% @comments.each do |comment| %>
    <tr>
      <td> <%= comment.comment %></td>
      <td>
        <%= link_to("Show", {:action => 'show', :id => comment.id}, :class => 'action show') %>
        <% if isCommentCreator(1) == 'true' %>
        <%= link_to("edit", {:action => 'editComment', :id => comment.id}, :class => 'action delete') %>
        <%= link_to("Delete", {:action => 'destroy', :id => comment.id}, :confirm => 'Are you sure you want to delete this comment?', :class => 'action delete') %>
        <% end %>
      </td>
    </tr>
<% end %>
</table>

<br />

<% end %>
</div>
