<div class="comment new">
	<h2>Create Comment</h2>
	<%= form_for (:comment, :url => {:action => 'create'}) do |f| %>

	<table summary = "The Comment">
		<tr>
			<th>Comment ID</th>
			<td><% f.text_field(:id) %></td>
		</tr>
		<tr>
			<th>Comment Content</th>
			<td><% f.text_field(:comment) %></td>
		</tr>
	</table>
	<div class="form-buttons">
		<%= submit_tag("Create Comment") %>
	</div>
</div>
