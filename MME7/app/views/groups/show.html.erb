
<div>
<div>
  <div class="flash">
  <%= flash[:notice] %>
  <%= flash[:error] %>
</div>

<%= link_to("الرجوع إلى قائمة المجموعات", {:action => 'index'}, :class => 'btn btn-link') %>

<div>
      <p>
        <b>اسم المجموعة</b>
        <%= @group.group_name %>
      </p>

      <p>
        <b>وصف</b>
        <%= @group.description %>
      </p>

      <p>
        <b>مستوى المجموعة</b>
        <%= @group.levels %>
      </p>

      <div>
        <% if ifMember(@group.id, 1) == false %>
        <%= button_to("اشترك معنا ",{:controller => 'group_users', :action =>'join', :id => @group.id, :user_id => 1}, :class => 'btn btn-inverse') %>
        <% end %>

        <% if ifMember(@group.id, 1) == true && isGroupCreator(@group.id, 1) != true %>
        <%= button_to("ترك المجموعة",{:controller => 'group_users', :action =>'leave', :id => @group.id}, :class => 'btn btn-inverse') %>               
        <% end %>

        <% if isGroupCreator(@group.id, 1) == true %>
        <%= button_to("حذف المجموعة", {:action => 'destroy', :id => @group.id}, :helper => GroupUsersHelper, :confirm => 'Are you sure you want to delete this group?', :class => 'btn btn-danger') %>
        <% end %>
      </div>
</div>
    <footer>
      <p>
        <b>أنشئت في</b>
        <%= @group.created_at %>
      </p>
    </footer>
</div>
