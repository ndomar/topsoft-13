<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
<div class="flash">
  <%= flash[:notice] %>
  <%= flash[:error] %>
</div>

<%= link_to("الرجوع إلى قائمة المجموعات", {:action => 'index'}, :class => 'btn btn-link') %>

<h2 class = 'text-center'>إنشاء مجموعة</h2>

<%= form_for(:group, :url => {:action => 'create'}) do |f| %>

  <p>
    <b dir="rtl" lang="ar">اسم المجموعة *</b>
    <%= f.text_field :group_name %>
  </p>
  <p>
    <b dir="rtl" lang="ar">وصف *</b>
    <%= f.text_area :description%>
  </p>
   <p>
    <b dir="rtl" lang="ar">مستوى المجموعة *</b>
    <%= f.text_field :levels %>
  </p>
  <div>
    <button class="btn btn-info" type="submit">إنشاء المجموعة</button>
  </div>
<% end %>