 
 <table class="table">
     <tr>
     <th>Post Name</th>
     <th>Action</th>
    </tr>  
 	<%  @project.posts.each do |post| %> 	
 	 <tr>
 	 	
 	  
     <td>
     	<% if isPostCreator(1, post.id) %>
     	<label>tab to edit</label>
        <%= best_in_place post, :content, :path => {:controller => 'posts', :action=>'updatePost', :id=> post.id} %> 
        <% else %>	
        <%= post.content %>
        <% end %>

        <div id ="tablePosts"><%= render(:partial => "tableComments", :locals => {:post => post}) %></div>
        </td>
        <td>
     	<%= link_to("delete post", {:controller => 'posts', :action => 'destroy', :id => post.id, 
    	:project_id => @project.id})%>  
        </td> 
	</tr>
			
	
<% end %>
</table>


	   </tr>    
	    <div class="post new">
		<%= form_for(:post, :url => {:controller => 'posts',:action => 'createPost', :id => params[:id]}, 
		:html => {:id => "post-form"}) do |f| %>
		<tr>			
		<td><%= f.text_field (:content) %></td>		
		<div><%= f.hidden_field :project_id, :value => @project_id %></div>		
		<td>
		<button type="submit" class="btn btn-danger">Create Post</button>
		</td>		
		</tr>
		</tr>
		</div>
		<% end %>
	

