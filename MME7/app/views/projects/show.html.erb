<%= link_to("Back to list", {:action => 'list', :class => 'back link'} ) %>

<div class="project show">

    <h2>Show Projects</h2>
	<table summary="Project detail view">
  
 	 <tr >
 		<th>name</th>
 		<td><%= @project.project_name %></td>
 	 </tr>
 	
 	 <tr >
 		<th>start date</th>
 		<td><%= @project.start_date %></td>
 	 </tr>
 	
 	 <tr >
 		<th>end date</th>
 		<td><%= @project.start_date %></td>
 	 </tr>

 	 <tr >
 		<th>description</th>
 		<td><%= @project.description %></td>
 	 </tr> 	
    </table>


    <h3>Posts</h3>
    <table border = 2>  
 	<%  @project.posts.each do |post| %>
    <tr>
    <td> <%= post.content %>     
   
    <%= form_for(:post, :url => {:controller => 'posts', :action => 'destroy', :id => post.id, 
    	:project_id => @project.id}) do |f| -%>
    <div >
      <%= submit_tag("Delete post") %>
    </div> 
    <% end %>  
 
   

   	
	<%= form_for(:post, :url=>{:controller => 'posts', :action=>'updatePost', :id=> post.id, 
		:project_id => @project.id}) do |f| %>
	<%= f.text_field(:content) %>
	
	<div class="form-buttons">
	<%= submit_tag("Edit Post") %>
	</div>
	<% end %>

	
	

	


    <td><% post.comments.each do |p|%>
    	<%= p.comment.to_s %> <br></br>
    

    	 <%= form_for(:comment, :url => {:controller => 'comments', :action => 'destroy', :id => p.id, 
	    	:post_id => post.id, :project_id => @project.id}) do |f| -%>
	    <div >
	      <%= submit_tag("Delete Comment") %>
	    </div>    
	   <% end %>


	   <%= form_for(:comment, :url=>{:controller => 'comments', :action=>'updateComment', :id=> p.id, 
		:post_id => post.id, :project_id => @project.id}) do |f| %>
	<table>		
		<tr>
			<td><%= f.text_field(:comment) %></td>
       </tr>
	</table>
	<div class="form-buttons">
	<%= submit_tag("Edit Comment") %>
	</div>
	<% end %>
	<% end %>

    
       <div class="comment new">
	   <%= form_for(:comment, :url => {:controller => 'comments',:action => 'createComment', :id => post.id, 
	   	:project_id => params[:id]}) do |e| %>
		<table boder = 2>		
		<tr>
			<th>Comment Content</th>
			<td><%= e.text_field (:comment) %></td>
		</tr>
		<tr>
			<td><%= e.hidden_field :post_id, :value => post.id %></td>		
		</tr>
		</table>
		<div class="form-buttons">
			<%= submit_tag("Create Comment") %>
		</div>
		<% end %>
    </td>
    </tr> 
      
     <% end %>
     </table> 

    
	    <div class="post new">
		<%= form_for(:post, :url => {:controller => 'posts',:action => 'createPost', :id => params[:id]}) do |f| %>
		<table summary = "The Post">		
		<tr>
			<th>Post Content</th>
			<td><%= f.text_field (:content) %></td>
		</tr>
		<tr>
			<td><%= f.hidden_field :project_id, :value => @project_id %></td>		
		</tr>
		</table>
		<div class="form-buttons">
			<%= submit_tag("Create Post") %>
		</div>
		<% end %>
</div>


</div>