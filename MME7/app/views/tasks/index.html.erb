<div >
  <h2>TASKS TO BE DONE </h2>
  
<% flash[:notice] %>



  <table>
    <tr>
      <th></th>
      <h1>tasks list </h1>
      
    </tr>
    <% @task.each do |task| %>
    <tr>
     <td> <%= task.description %></td>
     <td>
      <%= link_to("Edit", {:action => 'edit', :id => task.id}, :class => 'action edit') %>
       <%= link_to("Assign", {:action => 'getProjectMembers', :id => task.id , :project_id => params[:id] }) %>
      
        <b> <%= link_to "Delete", {:action => 'destroy', :id => task.id},:confirm => "Are you sure you want to delete this task?" %></b>



      </td>
    </tr>
    <% end %>
    <%= link_to("Add new task ", {:action => 'create'}, :class => 'action create') %>
  </table>

