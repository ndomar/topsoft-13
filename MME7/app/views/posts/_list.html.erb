<div >
  <h2>post</h2>
  
  

  <table >
    <tr>
      <th></th>
      <th>Post List</th>
      
    </tr>
    <% if @posts %>
    <% @posts.each do |post| %>
    <tr>
     <td> <%= post.content %></td>
      
       <td><%= link_to("Show", {:action => 'show', :id => post.id}, :class => 'action show') %></td>
        <td><%= link_to("Delete", {:action => 'delete', :id => post.id}, :class => 'action delete') %>
        <% if @comments %>  
          <%= render @post.comments %>
              <% end %>
      </td>
    <% end %>
    </tr>
    <% end %>
  </table>
</div>