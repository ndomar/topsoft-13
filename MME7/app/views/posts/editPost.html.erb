<div class="post edit">
	<h2>Edit Post</h2>
	

	<%= form_for @post, :url => { :action => "updatePost" } do |f| %>
	

	<table summary = "The Post">
		<tr>
			<th>Post ID</th>
			<td><%= f.text_field :id %></td>
			
		</tr>

		<tr>
			<th>Post Content</th>
			<td><%= f.text_field :content %></td>
		</tr>

	</table>
	

	<div class="form-buttons">
		<%= submit_tag("Update Post") %>
	</div>

	<% end %>

</div>
