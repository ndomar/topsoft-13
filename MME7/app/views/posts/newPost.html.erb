<div class="post new">
	<h2>Create Post</h2>
	

	<%= form_for(:post, :url => {:action => 'createPost', :project_id => @project_id}) do |f| %>

	<table summary = "The Post">
		

		<tr>
			<th>Post Content</th>
			<td><%= f.text_field (:content) %></td>
		</tr>

		<tr>
			<td><%= f.hidden_field :project_id, :value => @project_id %></td>
		</tr>

	</table>
	

	<div class="form-buttons">
		<%= submit_tag("Create Post") %>
	</div>

	<% end %>

</div>